{% extends "base.html.twig" %}

{% block body %}

    {% if error %}
        <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1>{{ 'front.login.form.title'|trans }}</h1>

    <form id="login-form" action="{{ path('login_check') }}" method="post">
        <div class="field">
            <label for="username">{{ 'front.login.form.login'|trans }}</label>
            <div class="control">
                <input type="text" id="username" name="_username" value="{{ last_username }}" />
            </div>
        </div>
        <div class="field">
            <label for="password">{{ 'front.login.form.password'|trans }}</label>
            <div class="control">
                <input type="password" id="password" name="_password" />
            </div>
        </div>
        <div class="form-buttons">
            <button type="submit" class="button">{{ 'global.login'|trans }}</button>
        </div>
    </form>

{% endblock %}
